pipeline {
    agent any
    parameters {
        string(name: 'imageName', description: 'Name of the image to build')
    }
    stages {
        stage('Build image') {
            steps {
                echo 'Starting to build docker image'

                script {
                    def customImage = docker.build("ibera/${params.imageName}:v${env.BUILD_ID}", "./dockerfiles/${params.imageName}")
		                docker.withRegistry('https://index.docker.io/v1/', 'e43ae325-cfb0-4d39-baf0-dde93e753d23'){
                            customImage.push()
		                }
                }
            }
        }
    }
}